<h3>Write a new post</h3>
<form>
  <div class="form-group">
    <label for="username">Username</label>
    {{input class="form-control" value=username id="username"}}
  </div>
  <div class="form-group">
    <label for="title">Title</label>
    {{input class="form-control" value=title id="title"}}
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    {{input class="form-control" value=body id="body"}}
  </div>
  <button class="btn btn-primary" {{action 'savePost'}}>Save</button>
</form>
