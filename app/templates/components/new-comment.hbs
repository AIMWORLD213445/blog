{{#if addNewComment}}
<h1>New Comment</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="username">Username</label>
        {{input value=username id="username" class="form-control"}}
      </div>
      <div class="form-group">
        <label for="body">Enter your comment here:</label>
        {{input value=body id="body" class="form-control"}}
      </div>
      <button {{action 'saveComment'}} class="btn btn-info">Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'commentFormShow'}} class="btn btn-info">New Comment</button>
{{/if}}
