<div class="row">
  <div class="col-md-12 post-tile">
    {{#link-to 'post' post.id}}
      <h4>{{post.title}}</h4>
      <p>{{post.username}} | {{moment-format post.timestamp "lll"}}</p>
      <p>{{excerpt post.body}}</p>
    {{/link-to}}
    {{update-post post=post update="update"}}
    <button class="btn btn-sm btn-warning" {{action 'delete' post}}>Delete Post</button>
  </div>
</div>
