<h2>{{post.title}}</h2>
<p>{{post.username}} | {{moment-format post.timestamp "lll"}}</p>
<p>{{post.body}}</p>

<h3>Comments</h3>
{{#each post.comments as |comment|}}
  {{comment-tile comment=comment}}
{{/each}}
<hr>
<button class="btn btn-warning" {{action 'delete' post}}>Delete Post</button> {{update-post post=post update="update"}}
